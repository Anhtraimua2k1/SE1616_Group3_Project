@model SE1616_Group3_Project.Models.User
<!-- Page Header Start -->
<div class="container-fluid page-header py-6 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center pt-5 pb-3">
        <h1 class="display-4 text-white animated slideInDown mb-3">Products</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                <li class="breadcrumb-item"><a class="text-white" href="#">Pages</a></li>
                <li class="breadcrumb-item text-primary active" aria-current="page">Users Management</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- Product Start -->
<div class="container bg-light" style="">
    <div class="container">
        <div class="row g-4">

            <div class="col-lg-12">
                <table class="table">
                    <tr>
                    </tr>
                    @foreach (User u in @ViewBag.allUser)
                    {

                        <tr>
                            <form asp-action="Update" asp-controller="User">

                                <input type="hidden" asp-for="Email" value="@u.Email" />
                                @if (u.PhotoLink != null)
                                {
                                <td><img src="~/@u.PhotoLink" /></td>
                                }
                                else
                                {
                                <td>No image</td>
                                }

                            <td>@u.Name</td>
                            <td>@u.Email</td>
                            <td>@u.Password</td>
                            <td>@u.Phone</td>
                            <td>@u.Gender==true?"Male":"Female"</td>
                            <td>@u.Address</td>
                            <td>@u.Age</td>

                            <td>
                                <select asp-for="RoleId">
                                        @foreach (Role r in @ViewBag.role)
                                        {
                                            @if (r.Id == u.RoleId)
                                            {
                                            <option selected value="@r.Id">@r.Name</option>
                                            }
                                            else
                                            {
                                            <option value="@r.Id">@r.Name</option>
                                            }
                                        }
                                </select>
                            </td>
                            <td><button type="submit" class="btn btn-primary">Update</button></td>
                            </form>
                            <td><a asp-action="Delete" asp-controller="User" asp-route-email="@u.Email"></a></td>
                        </tr>

                    }
                </table>
            </div>


        </div>
    </div>
</div>
<!-- Product End -->