@model SE1616_Group3_Project.Models.User
<!-- Page Header Start -->
<div class="container-fluid page-header py-6 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center pt-5 pb-3">
        <h1 class="display-4 text-white animated slideInDown mb-3">Products</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                <li class="breadcrumb-item"><a class="text-white" href="#">Pages</a></li>
                <li class="breadcrumb-item text-primary active" aria-current="page">Your Profile</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- Product Start -->
<div class="container bg-light" style="">
    <div class="container text-center">
        <p>@ViewBag.msg</p>
        <div class="row g-4">
            <div class="col-lg-4">

                @if (Model.PhotoLink == null)
                {
                    <p>No Image</p>
                }
                else
                {
                    <img class="w-100 h-100" src="~/@Model.PhotoLink" />
                }
            </div>
            <div class="col-lg-8">
                @using (Html.BeginForm("Update", "User", FormMethod.Post, new { encrypte = "multipart/form-data" }))
                {
                    @Html.TextBox("file", "", new {  type= "file"})
                    <input type="hidden" asp-for="PhotoLink" />
                    <input class="form form-control" asp-for="Email" readonly />
                    <input class="form form-control" asp-for="Name" />
                    <input class="form form-control" asp-for="Phone" />
                    <input class="form form-control" asp-for="Address" />
                    <input class="form form-control" asp-for="Age" />
                    <div class="form form-control mb-2 text-start">
                        @if (Model.Gender == true)
                        {
                            <input asp-for="Gender" type="radio" class="form form-check-input" value="1" checked />
                            <label for="male" class="form form-label">Male</label>

                            <input asp-for="Gender" type="radio" class="form form-check-input" value="0" />
                            <label for="female" class="form form-label">Female</label>
                        }
                        else
                        {
                            <input asp-for="Gender" type="radio" class="form form-check-input" value="1" />
                            <label for="male" class="form form-label">Male</label>

                            <input asp-for="Gender" type="radio" class="form form-check-input" value="0" checked />
                            <label for="female" class="form form-label">Female</label>
                        }

                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <input type="submit" class="btn btn-primary" value="Update" />
                        </div>
                        <div class="col-lg-6">
                            <a class="btn btn-primary" asp-action="ChangePassword" asp-controller="User">Change Password</a>
                        </div>
                    </div>


                }
            </div>


        </div>
    </div>
</div>
<!-- Product End -->