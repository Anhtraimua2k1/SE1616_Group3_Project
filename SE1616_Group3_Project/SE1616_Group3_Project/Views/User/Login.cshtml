@{
    ViewData["Title"] = "Login";
}
<div class="container-fluid p-0 wow fadeIn" data-wow-delay="0.1s">
    <div class="owl-carousel header-carousel position-relative">
        <div class="owl-carousel-item position-relative">
            <img class="img-fluid" src="~/img/carousel-1.jpg" alt="">
            <div class="owl-carousel-inner">
                <div class="container">
                    <div class="row justify-content-center text-center">
                        <h1 style="color:orange">Login</h1>
                        <div class="col-lg-4">
                            <form asp-action="Login" asp-controller="User" id="login-form">
                                <h3 style="color:red">@ViewBag.msg</h3>
                                <div class="text-center">
                                    <input class="form form-control mb-2" type="text" name="email" id="email" placeholder="Email" />
                                    <input class="form form-control mb-2" type="password" name="password" id="password" placeholder="Password" />
                                    <input class="btn btn-primary" type="submit" value="Login">
                                </div>
                            </form>
                            <p style="color:white">Don't have account? <a href="">Register Now</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>